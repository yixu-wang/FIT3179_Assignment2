{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/yixu-wang/FIT3179_Assignment2/refs/heads/main/data/AlcoholConsumptionByGender.csv"
  },
  "transform": [
    {"calculate": "replace(datum.Age,' to ','â€“')", "as": "Age Group"},
    {"filter": "datum.DrinkLevel == DrinkLevelSelector"},
    {"calculate": "datum.Proportion/100", "as": "Proportion_frac"}
  ],
  "title": {
    "text": "Alcohol consumption by age and gender in 2022",
    "fontSize": 18,
    "offset": 20,
    "subtitle": "Gender",
    "align": "center",
    "anchor": "middle",
    "subtitleFontSize": 12,
    "subtitleFontWeight":"bold",
    "subtitlePadding": 15
  },
  "spacing": 0,
  "hconcat": [
    {
      "height": 300,
      "transform": [{"filter": "datum.Gender == 'Male'"}],
      "title": {"text": "Male", "fontWeight": 500, "fontSize": 11},
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Proportion",
          "type": "quantitative",
          "sort": "descending",
          "scale": {"domain": [0, 100]}
        },
        "y": {"field": "Age Group", "sort": "descending", "axis": null},
        "color": {"field": "Gender", "legend": null},
        "tooltip": [
          {"field": "Age", "title": "Age group"},
          {"field": "Gender"},
          {"field": "Proportion_frac","title": "Proportion", "type": "quantitative", "format": ".1%"}
        ]
      }
    },
    {
      "height": 300,
      "transform": [{"filter": "datum.Gender == 'Female'"}],
      "title": {"text": "Female", "fontWeight": 500, "fontSize": 11},
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Proportion",
          "type": "quantitative",
          "scale": {"domain": [0, 100]}
        },
        "y": {"field": "Age Group", "sort": "descending", "title": null},
        "color": {
          "field": "Gender",
          "legend": null,
          "scale": {"range": ["purple", "#00bcd4"]}
        },
        "tooltip": [
          {"field": "Age", "title": "Age group"},
          {"field": "Gender"},
          {"field": "Proportion_frac", "type": "quantitative", "format": ".1%",
        "title": "Proportion"}
        ]
      }
    }
  ],
  "params": [
    {
      "name": "DrinkLevelSelector",
      "value": "risky",
      "bind": {
        "input": "select",
        "options": ["abstain", "safe", "risky"],
        "labels": [
          "Abstainers",
          "Not at risk",
          "Risky"
        ],
        "name": "Consumption Level: "
      }
    }
  ],
  "config": {"axis": {"grid": false}, "view": {"stroke": null}}
}